{
  "openapi": "3.0.0",
  "info": {
    "title": "API backend melApp",
    "description": "Documentaci√≥n de la API backend para melApp",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8131/"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "User management tasks."
    },
    {
      "name": "Suppliers",
      "description": "Suppliers management tasks; users only have access to the suppliers they have registered themselves."
    },
    {
      "name": "Clients",
      "description": "Clients management tasks; users only have access to the clients they have registered themselves."
    },
    {
      "name": "Harvests",
      "description": "Harvests management tasks; users only have access to their own harvests; harvests record the state of the beehive and apiary at the actual moment of harvesting, and do not reflect changes suffered afterwards."
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Process login requests.",
        "responses": {
          "200": {
            "description": "User logged in succesfully; sent JWT token to client.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginUser200ResponseSchema"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/loginUser200ResponseSchema"
                }
              }
            }
          },
          "400": {
            "description": "Login failed: body does not match data schema.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorSchema"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/errorSchema"
                }
              }
            }
          },
          "401": {
            "description": "Login failed: user and/or password are incorrect or unregistered.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorSchema"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/errorSchema"
                }
              }
            }
          }
        },
        "requestBody": {
          "description": "Request body containing users email and password (encrypted).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userCredentialsSchema"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/userCredentialsSchema"
              }
            }
          }
        }
      }
    },
    "/harvests": {
      "get": {
        "tags": [
          "Harvests"
        ],
        "description": "Get all harvests of current user.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "$ref": "#/components/parameters/userEmailHeader"
          }
        ],
        "responses": {
          "200": {
            "description": "Sent harvests array to client."
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "JWT token",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "required": "true"
      }
    },
    "parameters": {
      "userEmailHeader": {
        "in": "header",
        "name": "userEmail",
        "description": "Current user email",
        "schema": {
          "type": "string"
        },
        "required": "true"
      }
    },
    "schemas": {
      "userCredentialsSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 100
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false
      },
      "loginUser200ResponseSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "payload": {
            "type": "object",
            "properties": {
              "userToken": {}
            },
            "additionalProperties": false
          }
        },
        "required": [
          "message",
          "payload"
        ],
        "additionalProperties": false
      },
      "errorSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "statusCode": {
            "type": "number",
            "format": "float"
          }
        },
        "required": [
          "message",
          "statusCode"
        ],
        "additionalProperties": false
      }
    }
  }
}