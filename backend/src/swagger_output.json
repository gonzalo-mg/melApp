{
  "openapi": "3.0.0",
  "info": {
    "title": "API backend melApp",
    "description": "Documentaci√≥n de la API backend para melApp",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8105/"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "User management tasks."
    },
    {
      "name": "Suppliers",
      "description": "Suppliers management tasks; users only have access to the suppliers they have registered themselves."
    },
    {
      "name": "Clients",
      "description": "Clients management tasks; users only have access to the clients they have registered themselves."
    },
    {
      "name": "Harvests",
      "description": "Harvests management tasks; users only have access to their own harvests; harvests record the state of the beehive and apiary at the actual moment of harvesting, and do not reflect changes suffered afterwards."
    }
  ],
  "paths": {
    "/harvests": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Login for registered users.",
        "responses": {
          "200": {
            "description": "User logged in succesfully; sent JWT token to client.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginUser200ResponseSchema"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/loginUser200ResponseSchema"
                }
              }
            }
          }
        },
        "requestBody": {
          "description": "Request body containing users email and password (encrypted).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userCredentialsSchema"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/userCredentialsSchema"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "userCredentialsSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 100
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false
      },
      "loginUser200ResponseSchema": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "payload": {
            "type": "object",
            "properties": {
              "userToken": {}
            },
            "additionalProperties": false
          }
        },
        "required": [
          "message",
          "payload"
        ],
        "additionalProperties": false
      }
    }
  }
}