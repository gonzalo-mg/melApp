  "components": {
    "parameters": {
      "numericalIdParameter": {
        "description": "Identification number",
        "in": "path",
        "required": "true",
        "schema": {
          "$ref": "#/definitions/numericalId"
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "JWT token",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "required": "true"
      }
    },
    "schemas": {
      "userCredentials": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 100
          }
        },
        "required": [
          "email",
          "password"
        ],
        "additionalProperties": false
      },
      "response200": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "payload": {
            "type": "object",
            "properties": {},
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "errors": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "statusCode": {
            "type": "number",
            "format": "float"
          }
        },
        "required": [
          "message",
          "statusCode"
        ],
        "additionalProperties": false
      },
      "numericalId": {
        "type": "string",
        "pattern": "^\\d+$"
      },
      "supplier": {
        "type": "object",
        "properties": {
          "supplierId": {
            "type": "integer"
          },
          "supplierName": {
            "type": "string",
            "maxLength": 100
          },
          "phone": {
            "type": "string",
            "maxLength": 15
          },
          "email": {
            "type": "string",
            "format": "email",
            "maxLength": 100
          },
          "web": {
            "type": "string",
            "maxLength": 100
          },
          "locality": {
            "type": "string",
            "maxLength": 100
          },
          "street": {
            "type": "string",
            "maxLength": 100
          },
          "addressNumber": {
            "type": "integer"
          },
          "notes": {
            "type": "string",
            "maxLength": 500
          },
          "userEmail": {
            "type": "string",
            "format": "email",
            "maxLength": 100
          },
          "created": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "supplierName"
        ],
        "additionalProperties": false
      }
    }
  },
